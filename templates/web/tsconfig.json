{
  "extends": "../../tsconfig.json",
  "include": ["**/*"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "@app/*": ["./app/*"],
      "@config/*": ["./config/*"],
      "@contracts/*": ["./contracts/*"],
      "@database/*": ["./database/*"]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@adonisjs/session",
      "@adonisjs/view",
      "@adonisjs/shield",
      "@adonisjs/lucid",
      "@japa/preset-adonis/build/adonis-typings",
      "@kubit/sentry/adonis-typings",
      "@kubit/queue/adonis-typings",
      "@kubit/support/adonis-typings"
    ]
  }
}
