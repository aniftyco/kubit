{
  "extends": "../../tsconfig.json",
  "include": ["**/*"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": ["./app/*"],
      "Config/*": ["./config/*"],
      "Contracts/*": ["./contracts/*"],
      "Database/*": ["./database/*"],
    },
    "types": [
      "@kubit/core",
      "@kubit/repl",
      "@kubit/session",
      "@kubit/view",
      "@kubit/shield",
      "@japa/preset-adonis/build/adonis-typings",
      "@kubit/lucid",
    ],
  },
}
