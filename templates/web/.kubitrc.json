{
  "typescript": true,
  "commands": ["./commands"],
  "exceptionHandlerNamespace": "App/Exceptions/Handler",
  "aliases": {
    "App": "app",
    "Config": "config",
    "Database": "database",
    "Contracts": "contracts"
  },
  "preloads": ["./routes/web", "./bootstrap/kernel"],
  "providers": ["./providers/AppProvider"],
  "metaFiles": [
    {
      "pattern": "public/**",
      "reloadServer": false
    },
    {
      "pattern": "resources/views/**/*.edge",
      "reloadServer": false
    }
  ],
  "aceProviders": ["kubit/dist/repl/provider"],
  "tests": {
    "suites": [
      {
        "name": "functional",
        "files": ["tests/functional/**/*.spec.ts"],
        "timeout": 60000
      }
    ]
  },
  "testProviders": []
}
