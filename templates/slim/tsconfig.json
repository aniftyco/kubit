{
  "extends": "@aniftyco/tsconfig",
  "include": ["**/*"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "@app/*": ["./app/*"],
      "@config/*": ["./config/*"],
      "@contracts/*": ["./contracts/*"],
      "@database/*": ["./database/*"]
    },
    "types": ["kubit/types"]
  }
}
