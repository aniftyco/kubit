{
  "name": "@kubit/i18n",
  "version": "0.0.1",
  "description": "Internationalization for AdonisJS apps",
  "main": "build/providers/I18nProvider.js",
  "files": [
    "build/adonis-typings",
    "build/providers",
    "build/templates",
    "build/src",
    "build/instructions.js",
    "build/instructions.d.ts",
    "build/instructions.md"
  ],
  "types": "build/adonis-typings/index.d.ts",
  "scripts": {
    "mrm": "mrm --preset=@kubit/mrm-preset",
    "pretest": "npm run lint",
    "test": "node -r @kubit/require-ts/build/register bin/test.ts",
    "clean": "del-cli build",
    "build": "tsc && copyfiles \"templates/**/*.txt\" \"instructions.md\" build",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "commit": "git-cz",
    "release": "np --message=\"chore(release): %s\"",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels ../../node_modules/@kubit/mrm-preset/gh-labels.json adonisjs/i18n"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aniftyco/kubit.git"
  },
  "keywords": [
    "intl",
    "localization",
    "translation",
    "i18n"
  ],
  "author": "virk,adonisjs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aniftyco/kubit/issues"
  },
  "homepage": "https://github.com/aniftyco/kubit#readme",
  "devDependencies": {
    "@kubit/core": "^0.0.1",
    "@kubit/mrm-preset": "^0.0.1",
    "@kubit/repl": "^0.0.1",
    "@kubit/require-ts": "^0.0.1",
    "@kubit/sink": "^0.0.1",
    "@kubit/view": "^0.0.1",
    "@japa/assert": "^1.3.4",
    "@japa/run-failed-tests": "^1.0.7",
    "@japa/runner": "^2.0.8",
    "@japa/spec-reporter": "^1.1.12",
    "@poppinss/dev-utils": "^2.0.3",
    "@types/luxon": "^2.3.2",
    "@types/node": "^17.0.35",
    "commitizen": "^4.2.4",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^4.0.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "github-label-sync": "^2.2.0",
    "husky": "^8.0.1",
    "mrm": "^4.0.0",
    "np": "^7.6.1",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "dependencies": {
    "@poppinss/colors": "^3.0.2",
    "@poppinss/intl-formatter": "^2.0.3",
    "@poppinss/utils": "^4.0.4",
    "accepts": "^1.3.8",
    "intl-messageformat": "^10.0.1",
    "luxon": "^2.4.0",
    "yaml": "^2.1.0"
  },
  "peerDependencies": {
    "@kubit/core": "^0.0.1"
  },
  "directories": {
    "test": "test"
  },
  "adonisjs": {
    "instructions": "./build/instructions.js",
    "instructionsMd": "./build/instructions.md",
    "templates": {
      "config": [
        "i18n.txt"
      ]
    },
    "metaFiles": [
      {
        "pattern": "resources/lang/**/*.(json|yaml)",
        "reloadServer": true
      }
    ],
    "types": "@kubit/i18n",
    "providers": [
      "@kubit/i18n"
    ]
  },
  "publishConfig": {
    "tag": "latest",
    "access": "public"
  },
  "mrmConfig": {
    "core": true,
    "license": "MIT",
    "services": [
      "github-actions"
    ],
    "minNodeVersion": "14.17.0",
    "probotApps": [
      "stale",
      "lock"
    ],
    "runGhActionsOnWindows": true
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptPackage",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  }
}
